<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CommunityFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/ic_forum"
            android:layout_width="40dp"
            android:tint="@color/mainColor"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:text=" 커뮤니티"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_writeList"
        android:text="내글보기"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_write"
        android:text="작성하기"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:background="@drawable/button"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/button_write"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/relativeLayout3"
        android:background="#10000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView_hospital"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#FE2E2E"
            android:padding="2dp"
            android:text="#병원추천"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView_cafe"
            android:gravity="center"
            android:layout_weight="1"
            android:text="#카페추천"
            android:textStyle="bold"
            android:textColor="#01A9DB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView_all"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="#전체보기" />

        <TextView
            android:id="@+id/textView_food"
            android:gravity="center"
            android:layout_weight="1"
            android:text="#맛집추천"
            android:textStyle="bold"
            android:textColor="#FFAA00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView_question"
            android:gravity="center"
            android:layout_weight="1"
            android:text="#궁금해요"
            android:textStyle="bold"
            android:textColor="#04B404"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>