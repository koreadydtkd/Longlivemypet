<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CommunityDetailFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:src="@drawable/ic_forum"
            android:layout_width="40dp"
            android:tint="@color/mainColor"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:text=" 커뮤니티"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:cardCornerRadius="8dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/textView_userNick"
                    android:text="작성자: 닉네임"
                    android:textSize="18sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView_classification"
                        android:text="분류"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/textView_date"
                        android:text="작성일"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView_title"
                android:text="제목: 테스트제목입니다"
                android:maxLines="1"
                android:maxLength="20"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/textView_content"
                    android:textSize="16sp"
                    android:text="가나다라마바사아자차카타파하 내용 테스트 문구입니다.\n테스트문구입니다\n테스트문구입니다.\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테\n테"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="6dp"
        android:layout_width="330dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <RelativeLayout
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        android:layout_width="330dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editText_comment"
            android:textSize="16sp"
            android:background="@drawable/border"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:maxLength="50"
            android:hint="댓글을 남겨주세요"
            android:layout_width="240dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/button_add"
            android:text="등록"
            android:background="@drawable/buttonsecond"
            android:textColor="@color/mainColor"
            android:layout_width="40dp"
            android:textStyle="bold"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/button_cancel" />
        <Button
            android:id="@+id/button_cancel"
            android:text="취소"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonsecond"
            android:layout_marginLeft="2dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>