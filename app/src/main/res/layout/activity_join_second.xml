<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinSecondActivity">

    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원정보 입력"
        android:textSize="32sp"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Nick"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:hint="닉네임(2자이상)"
            android:maxLength="8"
            android:inputType="textPersonName"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <Button
            android:id="@+id/button_Nick_Check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:text="중복확인" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="이름"
            android:maxLength="10"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <RadioGroup
            android:layout_alignParentRight="true"
            android:id="@+id/radioGroup_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radiobutton_W"
                android:text="여자"
                android:layout_marginRight="8dp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/radiobutton_M"
                android:text="남자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Birth"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:maxLength="6"
            android:hint="생년월일(앞 6자리)"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="예) 701010"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Phone"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:hint="핸드폰번호"
            android:maxLength="11"
            android:inputType="number"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="' - '제외"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_Join_Ok"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:text="완료"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />

</LinearLayout>