<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20FFAA00"
    tools:context=".JoinSecondActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="회원정보 입력"
            android:textSize="32sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/editText_Nick"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonsecond"
                android:hint="닉네임(2자이상)"
                android:inputType="textPersonName"
                android:maxLength="8"
                android:padding="10dp" />

            <Button
                android:id="@+id/button_Nick_Check"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button"
                android:text="중복확인"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/editText_Name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonsecond"
                android:hint="이름"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:padding="10dp" />

            <RadioGroup
                android:id="@+id/radioGroup_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radiobutton_W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:checked="true"
                    android:text="여자" />

                <RadioButton
                    android:id="@+id/radiobutton_M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/editText_Birth"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonsecond"
                android:hint="생년월일(앞 6자리)"
                android:inputType="number"
                android:maxLength="6"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:text="예) 701010"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/editText_Phone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonsecond"
                android:hint="핸드폰번호"
                android:inputType="number"
                android:maxLength="11"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="' - '제외"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_Join_Ok"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:text="가입완료"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>