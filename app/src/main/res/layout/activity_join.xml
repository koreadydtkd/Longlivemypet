<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#20FFAA00"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:padding="12dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/join"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Email"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:text="예) abc@abc.com"
            android:gravity="center"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Pw"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:maxLength="18"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:text="6자리 이상\n입력해주세요"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" >

        <EditText
            android:id="@+id/editText_Pw_Check"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:maxLength="18"
            android:inputType="textPassword"
            android:hint="비밀번호 재입력"
            android:background="@drawable/buttonsecond"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:text="동일하게\n입력해주세요"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_Join_Ok"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="가입하기"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>