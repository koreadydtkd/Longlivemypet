<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_classification"
                android:padding="4dp"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:background="@drawable/border"
                android:text="전체공지"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_title"
                android:text="제목입니다."
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/textView_classification"
                android:layout_alignBaseline="@+id/textView_classification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_userNick"
                android:layout_marginLeft="6dp"
                android:text="유저닉네임"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textView_date"
                android:layout_toRightOf="@+id/textView_userNick"
                android:layout_marginLeft="16dp"
                android:text="2020-02-07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/ic_comment"
                android:tint="#B96548"
                android:layout_toLeftOf="@+id/textView_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_commentCount"
                android:layout_marginLeft="4dp"
                android:text="0"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>